Section "Device"
    Identifier  "NVIDIA Graphics"
    Driver      "nvidia"
    Option      "NoLogo" "true"
EndSection

Section "Screen"
    Identifier "Screen0"
    Device     "NVIDIA Graphics"
    DefaultDepth 24
    SubSection "Display"
        Depth 24
        Modes "1920x1080"
    EndSubSection
EndSection

Section "ServerLayout"
    Identifier "Layout0"
    Screen 0 "Screen0"
EndSection

